<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<h1>Editing Book</h1>
		<%if @book.errors.any? %>
		<h3><%="#{@book.errors.full_messages.count} errors prohibited this obj being saved:" %></h3>
		<%end%>

		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
		<%= render "books/form", book: @book %>
		<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
		<%= link_to "Back", books_path, class: "back" %>

	</div>
	<div class="col-md-3"></div>

</div>